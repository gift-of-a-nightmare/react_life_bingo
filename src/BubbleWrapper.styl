random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)
randomT(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)s

.canvas
  height 100%
  width 100vw
  position fixed
  overflow hidden

.bubble
  display block

  border-radius: 100%
  opacity: .8
  position absolute

for $i in (1..50)
  $bgpos = $i % 2 == 0 ? top right : center

  .bubble
    &:nth-child({$i})
      width: random(5, 100)px
      height: @width
      left: random(1, 100)vh
      bottom: random(1, 100)vh
      animation move+$i infinite randomT(3, 15)

  @keyframes move{$i}
    0%
      bottom: -100px

    100%
      bottom: random(0, 100)vh
      transform: translate(random(-100, 200)px, 0)
      opacity 0
    